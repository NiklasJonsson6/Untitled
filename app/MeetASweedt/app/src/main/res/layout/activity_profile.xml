            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMatch"
            android:background="@android:color/holo_purple"
            android:layout_marginTop="71dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Chatt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonChat"
            android:background="@android:color/holo_purple"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/buttonMatch"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Cafe Karta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mapButton"
            android:layout_marginTop="55dp"
            android:background="@android:color/holo_purple"
            android:layout_below="@+id/buttonChat"
            android:layout_alignLeft="@+id/buttonChat"
            android:layout_alignStart="@+id/buttonChat" />

        <Button
            android:text="Logga Ut"
            android:layout_width="wrap_content"
